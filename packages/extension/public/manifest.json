{
  "manifest_version": 3,
  "name": "Movie Grabber",
  "version": "1.0.0",
  "description": "Grab movies and TV series from IMDb & Rotten Tomatoes, add them to Radarr/Sonarr",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.imdb.com/title/tt*"
      ],
      "js": ["content-imdb.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.rottentomatoes.com/m/*",
        "https://www.rottentomatoes.com/tv/*"
      ],
      "js": ["content-rottentomatoes.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Movie Grabber"
  }
}
